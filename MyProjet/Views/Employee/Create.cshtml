@model MyProjet.Models.Employee
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">

            <h2 class="text-center pl-4"> Add Employee </h2>

        </div>


        <div class="row">

            <div class="col-8">
                <div class=" form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="dep"></label>
                    </div>
                </div>
            </div>

            <div class="col-8">
                <div class=" form-group row">
                    <div class="col-4">
                       <input asp-for="Name" />
                    </div>
                    <div class="col-4">
                        <input asp-for="dep" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-8 offset-4 row">
            <div class="col">
                <input type="submit" value="Create" class="btn btn-info w-50" />
            </div>
            <div class="col">
                <a  asp-action="Index"class="btn btn-info w-50"> Add Employee </a>
          
            </div>
        </div>
    </div>

</form>


